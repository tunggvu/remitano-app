<div class="container">
  <h1>New video</h1>

  <%= form_for @movie do |f| %>
    <%= render 'shared/error_messages', object: @movie %>

    <div class="form-group">
      <%= f.label :URL %>
      <%= f.text_field :url, class: 'form-control', required: true %>
      <%= f.hidden_field :user_id, value: @movie.user_id, class: 'form-control' %>
      <span class="help-block">A link to the video on YouTube.</span>
    </div>

    <%= f.submit "Share", class: 'btn btn-primary' %>
  <% end %>
</div>
